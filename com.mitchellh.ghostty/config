# default shell
command = /opt/homebrew/bin/tmux
shell-integration = fish

# better font
font-thicken = true

# theme
theme = dark-modern
# in case missing:
# curl -o "/Applications/Ghostty.app/Contents/Resources/ghostty/themes/dark-modern" "https://raw.githubusercontent.com/mbadolato/iTerm2-Color-Schemes/a84c2049d6f2ecb6050a8eba7d38977900598e90/ghostty/Dark%20Modern"

# quake mode
keybind = global:opt+t=toggle_quick_terminal
quick-terminal-animation-duration = 0

# tmux
## new window
keybind = cmd+t=unbind
keybind = cmd+t=text:\x02c

## close window
keybind = cmd+w=unbind
keybind = cmd+w=text:\x02&

## next window
keybind = cmd+opt+right=unbind
keybind = cmd+opt+right=text:\x02n

## previous window
keybind = cmd+opt+left=unbind
keybind = cmd+opt+left=text:\x02p
