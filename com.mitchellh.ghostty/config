# default shell
command = /opt/homebrew/bin/tmux
shell-integration = fish

# theme
theme = dark+

# better font
font-family = "" # override the default font
font-family = "Menlo"
font-thicken = true
font-size = 17.5

# quake mode
keybind = global:opt+t=toggle_quick_terminal
quick-terminal-animation-duration = 0

# tmux
## new window
keybind = cmd+t=unbind
keybind = cmd+t=text:\x02c

## close window
keybind = cmd+w=unbind
keybind = cmd+w=text:\x02&

## next window
keybind = cmd+opt+right=unbind
keybind = cmd+opt+right=text:\x02n

## previous window
keybind = cmd+opt+left=unbind
keybind = cmd+opt+left=text:\x02p

## switch session
keybind = cmd+s=text:\x02s

## create a new session
keybind = cmd+n=unbind
keybind = cmd+n=text:\x02:

## no need to confirm, tmux is there
confirm-close-surface = false

## pane navigation
### up
keybind = cmd+up=unbind
keybind = cmd+up=text:\x02\x1b[A

### down
keybind = cmd+down=unbind
keybind = cmd+down=text:\x02\x1b[B

### right
keybind = cmd+right=unbind
keybind = cmd+right=text:\x02\x1b[C

### left
keybind = cmd+left=unbind
keybind = cmd+left=text:\x02\x1b[D

## close pane
keybind = cmd+w=unbind
keybind = cmd+w=text:\x02x

## split to right
keybind = cmd+shift+right=unbind
keybind = cmd+shift+right=text:\x02%

## split to below
keybind = cmd+shift+down=unbind
keybind = cmd+shift+down=text:\x02\"
#" this is here just to fix the broken syntax highlighting

## split to left (split to right and swap)
keybind = cmd+shift+left=unbind
keybind = cmd+shift+left=text:\x02%\x02{

## split to above (split to below and swap)
keybind = cmd+shift+up=unbind
keybind = cmd+shift+up=text:\x02\"\x02{
