# default shell
command = /opt/homebrew/bin/tmux
shell-integration = fish

# better font
font-family = "" # override the default font
font-family = "Menlo"
font-thicken = true
font-size = 17.5

# quake mode
keybind = global:opt+t=toggle_quick_terminal
quick-terminal-animation-duration = 0

# tmux
## new window
keybind = cmd+t=unbind
keybind = cmd+t=text:\x02c

## close window
keybind = cmd+w=unbind
keybind = cmd+w=text:\x02&

## next window
keybind = cmd+opt+right=unbind
keybind = cmd+opt+right=text:\x02n

## previous window
keybind = cmd+opt+left=unbind
keybind = cmd+opt+left=text:\x02p
